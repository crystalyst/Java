// This class contains the information of a poker card.

public class Card implements Comparable<Card>{
	
    // instance variables
    private final String str_suit[] = {"c", "d", "h", "s"};
	private int suit; // use integers 1-4 to encode the suit
	private int rank; // use integers 1-13 to encode the rank
	
    // constructor
	public Card(int s, int r){
		this.suit = s;
        this.rank = r; 
	}
	
    // compareTo Method
	public int compareTo(Card c){
		if(this.rank < c.rank){
            return -1;
        }
        else if(this.rank > c.rank){
            return 1;
        }
        else{
            if(this.suit < c.suit){
                return -1;
            }
            else if(this.suit > c.suit){
                return 1;
            }
            else{
                return 0;
            }
        }
	}
	
    // combine suit and rank into String
	public String toString(){
        return str_suit[this.suit-1] + Integer.toString(this.rank);
	}
    
    // enable to use suit outside of this class
    public int getSuit(){
        return this.suit;
    }
    
    // enable to use rank outside of this calss
    public int getRank(){
        return this.rank;
    }

}
